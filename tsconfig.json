{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "declaration": true,
      "downlevelIteration": true,
      "strict": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
      "baseUrl": ".",
      "paths": {
        "@react-ngraph/core": ["packages/core/src"],
        "@react-ngraph/demo": ["packages/demo/src"]
      }
    }
  }
  