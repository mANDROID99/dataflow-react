{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "declaration": true,
      "downlevelIteration": true,
      "strict": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
      "baseUrl": "packages",
      "paths": {
        "@react-ngraph/editor": ["nodegraph/src"],
        "@react-ngraph/demo": ["demo/src"]
      }
    }
  }
  